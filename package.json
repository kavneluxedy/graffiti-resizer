{
	"name": "graffiti-resize",
	"author": "Quentin Cavenel",
	"description": "Grattifi-Resize | For Graffiti Agency's Clients and others",
	"version": "1.0.0",
	"private": false,
	"main": "public/electron-main.js",
	"build": {
		"appId": "com.example.GraffitiResize",
		"files": [
			"build/**/*",
			"dist/**/*",
			"public/electron-main.js"
		],
		"directories": {
			"buildResources": "assets"
		}
	},
	"scripts": {
		"react": "webpack-dev-server --hot --mode production",
		"build": "react-scripts build",
		"build-dev": "webpack --mode development",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"pack": "cross-env NODE_ENV=production webpack --config webpack.production.js --mode production",
		"start": "webpack-dev-server --hot",
		"prod": "concurrently \"npm run pack\" && \"wait-on npm:react && electron --noDevServer .",
		"dist": "npm run pack && electron-builder",
		"electron": "concurrently \"wait-on http://localhost:3000 && electron ./build/electron-main.js\" \"react-scripts start\"",
		"dist:dir": "npm run dist -- --dir -c.compression=store -c.mac.identity=null -c.extraMetadata.main=./build/electron-main.js"
	},
	"dependencies": {
		"downloadjs": "^1.4.7",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"react-image-file-resizer": "^0.4.7",
		"react-router-dom": "^6.3.0"
	},
	"devDependencies": {
		"concurrently": "^7.2.0",
		"cross-env": "^7.0.3",
		"electron": "^18.2.0",
		"electron-builder": "^23.0.3",
		"electron-is-dev": "^2.0.0",
		"wait-on": "^6.0.1",
		"webpack-cli": "^4.9.2",
		"webpack-dev-server": "^4.9.0"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
